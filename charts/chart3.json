{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "LINE CHART - GLOBAL SUICIDE TREND BY GENDER FROM 2000 TO 2020",
  "width": "container",
  "height": "container",
  "data": { "url": "data/suicidesByGender.csv" },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": { "field": "Suicides", "type": "quantitative" },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": { "range": ["#ffa760", "#60b2ff"] }
        },
        "tooltip": [
          { "field": "Year", "type": "ordinal" },
          { "field": "Suicides", "type": "quantitative" },
          { "field": "Gender", "type": "nominal" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "xOffset": -120,
        "dy": 58,
        "yOffset": -120,
        "align": "left"
      },
      "encoding": {
        "text": { "value": ["Suicides are more common among men"] }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "xOffset": -120,
        "dy": 58,
        "yOffset": 50,
        "align": "left"
      },
      "encoding": {
        "text": { "value": ["Suicide trend among women are relatively stable"] }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "xOffset": 0,
        "dy": 58,
        "yOffset": -220,
        "align": "left"
      },
      "encoding": {
        "text": { "value": ["Suicide spike among", "the males in 2011"] }
      }
    }
  ],
  "config": {
    "background": "#ffffff",
    "axis": {
      "titleColor": "#444444",
      "labelColor": "#444444",
      "labelFont": "sans-serif"
    },
    "legend": { "disable": true }
  }
}
