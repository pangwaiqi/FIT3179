{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "WATERFALL CHART - HEALTH EXPENDITURE",
  "width": "container",
  "height": "container",
  "data": {
  "url": "data/healthExpAUMY.csv"},
  "title": "Physical Health Expenditure",
  "params": [
      {
          "name": "selected_country",
          "bind": {
              "input": "select",
              "options": [null,"Australia","Malaysia"],
              "labels": ["Select a country", "Australia", "Malaysia"],
              "name": "Country: "
          }
      }
  ],
  "transform": [
      {"filter": "datum.Country == selected_country"},
      {"window": [{"op": "sum", "field": "amount", "as": "sum"}]},
      {"window": [{"op": "lead", "field": "label", "as": "lead"}]},
      {
          "calculate": "datum.Country == selected_country && datum.lead === null ? datum.label : datum.lead",
          "as": "lead"
      },
      {
          "calculate": "datum.Country == selected_country && datum.label === 'End' ? 0 : datum.sum - datum.amount",
          "as": "previous_sum"
      },
      {
          "calculate": "(datum.Country == selected_country && datum.label !== 'Start' && datum.label !== 'End' && datum.amount > 0 ? '+' : '') + datum.amount",
          "as": "text_amount"
      },
      {"calculate": "(datum.sum + datum.previous_sum) / 2", "as": "center"},
      {
          "calculate": "datum.Country == selected_country && datum.sum < datum.previous_sum ? datum.sum : ''",
          "as": "sum_dec"
      },
      {
          "calculate": "datum.Country == selected_country && datum.sum > datum.previous_sum ? datum.sum : ''",
          "as": "sum_inc"
      }
  ],
  "encoding": {
    "x": {
      "field": "label",
      "type": "ordinal",
      "sort": null,
      "axis": {"labelAngle": 0, "title": "Year"},
      "title": "Year"
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "size": 45},
      "encoding": {
        "y": {
          "field": "previous_sum",
          "type": "quantitative",
          "title": "Physical Health Expenditure (%)",
          "scale": {"domain": [0, 10]}
        },
        "y2": {"field": "sum"},
        "color": {
          "condition": [
            {
              "test": "datum.label === 'Start' || datum.label === 'End'",
              "value": "#f7e0b6"
            },
            {"test": "datum.Country == selected_country && datum.sum < datum.previous_sum", "value": "#ffa760"}
          ],
          "value": "#60b2ff"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#404040",
        "opacity": 1,
        "strokeWidth": 2,
        "xOffset": -22.5,
        "x2Offset": 22.5
      },
      "encoding": {
        "x2": {"field": "lead"},
        "y": {"field": "sum", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "text", "dy": -4, "baseline": "bottom"},
      "encoding": {
        "y": {"field": "sum_inc", "type": "quantitative"},
        "text": {"field": "sum_inc", "type": "nominal", "format":".2f"},
        "opacity": {
          "condition": {
              "test": "datum.sum_inc == 0.00", "value": 0
          }, "value":1
          }
      }
    },
    {
      "mark": {"type": "text", "dy": 4, "baseline": "top"},
      "encoding": {
        "y": {"field": "sum_dec", "type": "quantitative"},
        "text": {"field": "sum_dec", "type": "nominal","format":".2f"},
        "opacity": {
          "condition": {
              "test": "datum.sum_dec == 0.00", "value": 0
          }, "value":1
          }
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold", "fontSize":10, "baseline": "middle"},
      "encoding": {
        "y": {"field": "center", "type": "quantitative"},
        "text": {"field": "text_amount", "type": "nominal","format": ".2f"},
        "color": {
          "condition": [
            {
              "test": "datum.label === 'Start'",
              "value": "#725a30"
            },
            {
              "test": "datum.text_amount < 0.15 && datum.text_amount > -0.15", "value": null
            }
          ],
          "value": "white"
        }
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold", "fontSize":10, "baseline": "middle"},
      "encoding": {
        "y": {"field": "center", "type": "quantitative"},
        "text": {"value": "9.04"},
        "color": {"value": "#725a30"},
        "opacity": {
          "condition": [
            {
              "test": "datum.text_amount == 0.00 && datum.label === 'End' && datum.Country == 'Australia'", "value": 1
            }
          ],
          "value": 0
        }
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold", "fontSize":10, "baseline": "middle"},
      "encoding": {
        "y": {"field": "center", "type": "quantitative"},
        "text": {"value": "3.70"},
        "color": {"value": "#725a30"},
        "opacity": {
          "condition": [
            {
              "test": "datum.text_amount == 0.00 && datum.label === 'End' && datum.Country == 'Malaysia'", "value": 1
            }
          ],
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "xOffset": -30,
        "dy": 58,
        "yOffset": -150,
        "align": "left"
      },
      "encoding": {
        "text": {"value": ["Huge decrease", "in 2010"]},
        "opacity":{
          "condition": [
            {
              "test": "datum.Country == 'Australia' && datum.label == 2010", "value": 1
            }
          ], 
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "xOffset": -20,
        "dy": 58,
        "yOffset": -40,
        "align": "left"
      },
      "encoding": {
        "text": {"value": ["Slight increase in expenditure over the years"]},
        "opacity":{
          "condition": [
            {
              "test": "datum.Country == 'Malaysia' && datum.label == 2009", "value": 1
            }
          ], 
          "value": 0
        }
      }
    }
  ],
  "config": {"text": {"fontWeight": "bold", "color": "#404040"}}
}